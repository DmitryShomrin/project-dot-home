name: gitlab

services:
  gitlab:
    image: gitlab/gitlab-ce:{{ docker_compose_gitlab_image_version }}
    container_name: gitlab
    restart: unless-stopped
    hostname: "{{ docker_compose_gitlab_domain }}"
    environment:
      GITLAB_ROOT_PASSWORD: {{ docker_compose_gitlab_root_password }}
      GITLAB_OMNIBUS_CONFIG: |
        external_url "https://{{ docker_compose_gitlab_domain }}";
        letsencrypt['enable'] = false;
        nginx['listen_port'] = 80;
        nginx['listen_https'] = false;
        registry_external_url "https://{{ docker_compose_gitlab_registry_domain }}";
        registry['enable'] = true;
        registry_nginx['enable'] = true;
        registry_nginx['listen_port'] = 5050;
        registry_nginx['listen_https'] = false;
        gitlab_rails['registry_enabled'] = true;
        gitlab_rails['registry_port'] = 5000;
        gitlab_rails['registry_host'] = '0.0.0.0';
        postgresql['shared_buffers'] = "256MB";
        sidekiq['max_concurrency'] = 4;
        sidekiq['concurrency'] = 1;
        puma['worker_timeout'] = 120;
        puma['worker_processes'] = 1;
        prometheus_monitoring['enable'] = false;
    ports:
      - 22:22
    volumes:
      - "{{ docker_compose_gitlab_dir }}/config:/etc/gitlab"
      - "{{ docker_compose_gitlab_dir }}/logs:/var/log/gitlab"
      - "{{ docker_compose_gitlab_dir }}/data:/var/opt/gitlab"
    shm_size: '256m'
    networks:
      - services
{% if docker_compose_gitlab_labels %}
    labels:
{% endif %}
{% for item in docker_compose_gitlab_labels %}
      - {{ item }}
{% endfor %}

networks:
  services:
    name: services
    external: true
